{
  "publisher": "bmalehorn",
  "name": "scroll-viewport",
  "displayName": "ðŸ“œðŸ–¥ Scroll Viewport",
  "description": "Move the screen up and down, like with your mouse",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.37.0"
  },
  "repository": {
    "url": "https://github.com/bmalehorn/vscode-scroll-viewport"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:scrollViewport.scrollDown",
    "onCommand:scrollViewport.scrollUp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Scroll Viewport",
      "properties": {
        "scrollViewport.lines": {
          "type": "integer",
          "description": "How many lines to move up / down",
          "default": 10
        },
        "scrollViewport.cursorFollowsViewport": {
          "type": "boolean",
          "description": "Move the cursor as necessary to keep within the viewport",
          "default": false
        },
        "scrollViewport.buffer": {
          "type": "integer",
          "description": "Number of lines to keep between cursor and edge of screen",
          "default": 1
        }
      }
    },
    "keybindings": [
      {
        "command": "scrollViewport.scrollDown",
        "key": "ctrl+down",
        "mac": "cmd+down",
        "when": "editorTextFocus"
      },
      {
        "command": "scrollViewport.scrollUp",
        "key": "ctrl+up",
        "mac": "cmd+up",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.37.0",
    "glob": "^7.1.4",
    "husky": "^3.0.4",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
